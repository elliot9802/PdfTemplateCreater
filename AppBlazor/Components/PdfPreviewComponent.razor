@namespace AppBlazor.Components
@code {
    [Parameter]
    public string? PdfBase64 { get; set; }

    private string PdfViewerData => $"data:application/pdf;base64,{PdfBase64}";
}
@if (!string.IsNullOrEmpty(PdfBase64))
{
    <object data="@PdfViewerData" type="application/pdf" style="width:100%; height:500px;">
        <p>This browser does not support PDFs. Please download the PDF to view it: <a href="@PdfViewerData" download="template.pdf">Download PDF</a>.</p>
    </object>
}