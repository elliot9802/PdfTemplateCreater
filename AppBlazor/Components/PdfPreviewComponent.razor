@namespace AppBlazor.Components
@code {
    [Parameter]
    public string? PdfBase64 { get; set; }
}
@if (!string.IsNullOrEmpty(PdfBase64))
{
    <object data="@($"data:application/pdf;base64,{PdfBase64}")" type="application/pdf" style="width:100%; height:500px;">
        <p>This browser does not support PDFs. Please download the PDF to view it: <a href="@($"data:application/pdf;base64,{PdfBase64}")" download="template.pdf">Download PDF</a>.</p>
    </object>
}